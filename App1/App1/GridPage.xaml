<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.GridPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <BoxView Color="Aquamarine" Grid.Column="0" Grid.Row="0"></BoxView>
            <BoxView Color="Red" Grid.Column="0" Grid.Row="1"></BoxView>
            <BoxView Color="Blue" Grid.Column="1" Grid.Row="0"></BoxView>
            <BoxView Color="Green" Grid.Column="1" Grid.Row="1"></BoxView>
        </Grid>
    </ContentPage.Content>
</ContentPage>